---
import RefreshCw from "@lucide/astro/icons/refresh-cw";
import Trash2 from "@lucide/astro/icons/trash-2";

interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="flex items-center justify-between mb-8">
  <div>
    <h1 class="text-3xl font-bold text-gray-900 mb-1">{title}</h1>
    <p class="text-gray-600 text-sm">{subtitle}</p>
  </div>

  <div class="flex gap-3">
    <button
      class="px-4 py-2.5 bg-white border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors flex items-center gap-2"
    >
      <RefreshCw class="w-4 h-4" />
      Refresh
    </button>

    <button
      class="px-4 py-2.5 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-colors flex items-center gap-2"
    >
      <Trash2 class="w-4 h-4" />
      Clear All
    </button>
  </div>
</div>
