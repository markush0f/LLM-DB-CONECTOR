---
import { Layers, Cpu } from "lucide-react";

interface Props {
  totalMessages: number;
  modelsUsed: string[];
}

const { totalMessages, modelsUsed } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
  <!-- Messages Card -->
  <div
    class="bg-white/90 backdrop-blur-sm border border-gray-200 shadow-sm rounded-lg p-4 flex items-center gap-4"
  >
    <div
      class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center"
    >
      <Layers size="20" />
    </div>

    <div class="flex flex-col">
      <span class="text-xs text-gray-500">Messages</span>
      <span class="text-lg font-semibold text-gray-900">{totalMessages}</span>
    </div>
  </div>

  <!-- Models Card -->
  <div
    class="bg-white/90 backdrop-blur-sm border border-gray-200 shadow-sm rounded-lg p-4 flex items-center gap-4"
  >
    <div
      class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center"
    >
      <Cpu size="20" />
    </div>

    <div class="flex flex-col">
      <span class="text-xs text-gray-500">Models used</span>

      <div class="flex items-center gap-2 mt-1">
        <span class="text-lg font-semibold text-gray-900"
          >{modelsUsed.length}</span
        >

        <div class="flex flex-wrap gap-1">
          {
            modelsUsed.map((model) => (
              <span class="px-2 py-[1px] bg-purple-50 border border-purple-200 text-purple-700 text-[10px] rounded-md">
                {model}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</div>
