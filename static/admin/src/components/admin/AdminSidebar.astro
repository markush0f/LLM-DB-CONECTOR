---
import HomeIcon from "@lucide/astro/icons/house";
import DatabaseIcon from "@lucide/astro/icons/database";
import FileTextIcon from "@lucide/astro/icons/file-text";
import HistoryIcon from "@lucide/astro/icons/history";
import ListIcon from "@lucide/astro/icons/list";
import SettingsIcon from "@lucide/astro/icons/settings";
import PlugIcon from "@lucide/astro/icons/plug";
---

<aside class="w-64 h-screen text-white p-6 flex flex-col gap-6 shadow-2xl">
  <nav class="flex flex-col gap-2">
    <!-- Dashboard -->
    <a
      href="/admin"
      class="group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-white/10
             transition-all duration-200 hover:translate-x-1"
    >
      <HomeIcon
        class="w-5 h-5 text-purple-300 group-hover:text-white transition-colors"
      />
      <span class="text-purple-100 group-hover:text-white transition-colors"
        >Dashboard</span
      >
    </a>

    <!-- NEW: Connections -->
    <a
      href="/admin/connections"
      class="group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-white/10
             transition-all duration-200 hover:translate-x-1"
    >
      <PlugIcon
        class="w-5 h-5 text-purple-300 group-hover:text-white transition-colors"
      />
      <span class="text-purple-100 group-hover:text-white transition-colors"
        >Connections</span
      >
    </a>

    <!-- Cache Manager -->
    <a
      href="/admin/cache"
      class="group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-white/10
             transition-all duration-200 hover:translate-x-1"
    >
      <DatabaseIcon
        class="w-5 h-5 text-purple-300 group-hover:text-white transition-colors"
      />
      <span class="text-purple-100 group-hover:text-white transition-colors"
        >Cache Manager</span
      >
    </a>

    <!-- System Prompts -->
    <a
      href="/admin/prompts"
      class="group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-white/10
            transition-all duration-200 hover:translate-x-1"
    >
      <FileTextIcon
        class="w-5 h-5 text-purple-300 group-hover:text-white transition-colors"
      />
      <span class="text-purple-100 group-hover:text-white transition-colors"
        >System Prompts</span
      >
    </a>

    <!-- Prompts History -->
    <a
      href="/admin/history"
      class="group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-white/10
            transition-all duration-200 hover:translate-x-1"
    >
      <HistoryIcon
        class="w-5 h-5 text-purple-300 group-hover:text-white transition-colors"
      />
      <span class="text-purple-100 group-hover:text-white transition-colors"
        >Prompts History</span
      >
    </a>

    <!-- Logs -->
    <a
      href="/admin/logs"
      class="group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-white/10
             transition-all duration-200 hover:translate-x-1"
    >
      <ListIcon
        class="w-5 h-5 text-purple-300 group-hover:text-white transition-colors"
      />
      <span class="text-purple-100 group-hover:text-white transition-colors"
        >Logs</span
      >
    </a>

    <!-- Model Settings -->
    <a
      href="/admin/model"
      class="group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-white/10
             transition-all duration-200 hover:translate-x-1"
    >
      <SettingsIcon
        class="w-5 h-5 text-purple-300 group-hover:text-white transition-colors"
      />
      <span class="text-purple-100 group-hover:text-white transition-colors"
        >Model Settings</span
      >
    </a>
  </nav>
</aside>
