---
import Layout from "../layouts/Layout.astro";
import AdminSidebar from "../components/admin/AdminSidebar.astro";
import AdminHeader from "../components/admin/AdminHeader.astro";
import AdminCard from "../components/admin/AdminCard.astro";

import DatabaseIcon from "@lucide/astro/icons/database";
import FileTextIcon from "@lucide/astro/icons/file-text";
import HistoryIcon from "@lucide/astro/icons/history";
import ListIcon from "@lucide/astro/icons/list";
import SettingsIcon from "@lucide/astro/icons/settings";

import "../styles/global.css";
---

<Layout>
  <AdminSidebar />

  <main class="flex-1 flex flex-col bg-gray-50">
    <AdminHeader />

    <section class="p-8">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-1">Dashboard</h1>
        <p class="text-gray-600 text-sm">Overview of admin panel modules</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
        <AdminCard
          title="Cache Manager"
          description="Manage cached schemas & tables"
          Icon={DatabaseIcon}
          color="blue"
          href="/admin/cache"
        />

        <AdminCard
          title="System Prompts"
          description="Edit the active system prompt"
          Icon={FileTextIcon}
          color="purple"
          href="/admin/prompts"
        />

        <AdminCard
          title="Prompts History"
          description="Review user-generated prompts"
          Icon={HistoryIcon}
          color="green"
          href="/admin/history"
        />

        <AdminCard
          title="Logs"
          description="View backend activity logs"
          Icon={ListIcon}
          color="orange"
          href="/admin/logs"
        />

        <AdminCard
          title="Model Settings"
          description="Manage model configuration"
          Icon={SettingsIcon}
          color="cyan"
          href="/admin/model"
        />

        <!-- <AdminCard
          title="System Status"
          description=""
          Icon={BarChartIcon}
          color="indigo"
        > -->
        <div class="space-y-2">
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-600">Active Connections</span>
            <span class="font-semibold text-gray-900">24</span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-600">Cache Hit Rate</span>
            <span class="font-semibold text-green-600">94.2%</span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-600">Uptime</span>
            <span class="font-semibold text-gray-900">99.8%</span>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
